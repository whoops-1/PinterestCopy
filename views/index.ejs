<%include ../partials/header%>

<div class="p-5 w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="bg-zinc-100 px-8 py-12 rounded-[30px] w-full max-w-md">
    <h1 class="text-4xl leading-none capitalize text-center tracking-tighter font-semibold text-zinc-700">Welcome to Pinterest.</h1>
    <form action="/login" method="post" class="mt-8 w-full ">
      <input
        class="border-2 border-zinc-300 rounded-md block w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 border-zinc-300 rounded-md block w-full px-3 py-2 mt-4"
        type="password"
        name="password"
        placeholder="Password"
      />
      <a class="mt-4 inline-block text-zinc-700 font-semibold">Forgotten your password?</a>
      <input
        class="block w-full px-3 py-2 bg-red-700 rounded-full text-white font-bold text-xl mt-6"
        type="submit"
        value="Log in"
      />
      <p class="mt-6 text-center text-zinc-600">
        By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a class="block mt-6 text-sm text-center text-zinc-700 w-full font-semibold" href="/register">Don't have an account?</a>
  </div>
</div>

<%include ../partials/footer%>