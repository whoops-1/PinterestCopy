<%include ../partials/header%>
  
    <div class="p-5 py-5 w-full h-screen bg-zinc-300 flex items-center justify-center">
      <div class="bg-zinc-100 px-8 py-8 rounded-[30px] w-full max-w-md">
        <h1 class="text-4xl mb-10 leading-none capitalize text-center tracking-tighter font-semibold text-zinc-700">Create New Account</h1>
        <form action="/register" method="post">
          <input class="border-2 border-zinc-300 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="username" placeholder="username">
          <input class="border-2 border-zinc-300 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="fullname" placeholder="fullname">
          <input class="border-2 border-zinc-300 rounded-md block mt-2 w-full px-3 py-2 " type="email" name="email" placeholder="email">
          
          <input class="border-2 border-zinc-300 rounded-md block mt-2 w-full px-3 py-2 " type="number" name="contact" placeholder="Contact">
        
          <input class="border-2 border-zinc-300 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
         
       
         
         <input class="block mt-6 w-full px-3 py-3 bg-red-700 rounded-full text-white font-bold text-xl" type="submit" value="Create New Account">
         
         <p class="mt-4 text-center text-zinc-600 w-full px-5">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.
         </p>
        </form>
       <a class="block mt-7 text-sm text-center text-zinc-700 w-full font-semibold" href="/">Already have an account ? Login</a>
      </div>
    </div>

<%include ../partials/footer%>
