<% include ../partials/header %>
<div class="w-full min-h-screen bg-zinc-800 p-4">
  <h1 class="font-semibold w-full text-center text-white text-7xl">FEED</h1>
  <hr class="my-4 border-gray-600">
  <div class="flex flex-wrap gap-4 justify-center">
    <% posts.forEach(function(post) { %>
      <div class="card w-80 bg-zinc-700 rounded-lg shadow-lg overflow-hidden">
        <!-- Post Image -->
        <div class="w-full h-48 bg-zinc-300 overflow-hidden flex justify-center items-center">
          <img class=" h-full object-cover" src="/images/uploads/<%= post.postImage %>" alt="<%= post.title %>">
        </div>
        <!-- Post Details -->
        <div class="p-4">
          <h2 class="text-white text-xl font-semibold"><%= post.title %></h2>
          <p class="text-gray-300 text-sm mt-2"><%= post.description %></p>
          <!-- User Details -->
          <div class="flex items-center mt-4">
            <img class="w-8 h-8 rounded-full object-cover" src="/images/uploads/<%= post.user.profileImage %>" alt="<%= post.user.username %>">
            <span class="text-white ml-2"><%= post.user.username %></span>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<% include ../partials/footer %>